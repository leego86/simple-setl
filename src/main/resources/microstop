#!/bin/bash
#check JAVA_HOME & java
noJavaHome=false
if [ -z "$JAVA_HOME" ] ; then
    noJavaHome=true
fi
if [ ! -e "$JAVA_HOME/bin/java" ] ; then
    noJavaHome=true
fi
if $noJavaHome ; then
    echo
    echo "Error: JAVA_HOME environment variable is not set."
    echo
    exit 1
fi
#==============================================================================

#set HOME
CURR_DIR=`pwd`
LPPZ_MICRO_HOME=`pwd`
cd $CURR_DIR
if [ -z "$LPPZ_MICRO_HOME" ] ; then
    echo
    echo "Error: LPPZ_MICRO_HOME environment variable is not defined correctly."
    echo
    exit 1
fi
#==============================================================================

#set CLASSPATH
LPPZ_MICRO_CLASSPATH="$LPPZ_MICRO_HOME/conf:$LPPZ_MICRO_HOME/lib/classes"
for i in "$LPPZ_MICRO_HOME"/lib/*.jar
do
    LPPZ_MICRO_CLASSPATH="$LPPZ_MICRO_CLASSPATH:$i"
done
#==============================================================================

#destory Server
RUN_CMD="\"$JAVA_HOME/bin/java\""
RUN_CMD="$RUN_CMD -DLOG_HOME=\"logbiz\""
RUN_CMD="$RUN_CMD -classpath \"$LPPZ_MICRO_CLASSPATH\""
RUN_CMD="$RUN_CMD com.lppz.mirc.init.MircServiceDestory $@"
RUN_CMD="$RUN_CMD > \"/dev/null\" 2>&1 &"
echo $RUN_CMD
eval $RUN_CMD
#==============================================================================
WAIT_SECONDS=20
if [ -s pid ]
then
    PID=`cat pid`
    ps -fe|grep $PID |grep -v grep
    if [ $? -ne 0 ]
    then
        echo "process stop success"
    else
    	echo "wait $WAIT_SECONDS s"
		sleep $WAIT_SECONDS
		ps -fe|grep $PID |grep -v grep
    	if [ $? -ne 0 ]
    	then
    		echo "process stop success"
    	else
        	echo "process still runing start to kill"
        	kill -9 $PID
        fi
    fi
fi
rm -f pid